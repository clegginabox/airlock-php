{
    "name": "clegginabox/airlock",
    "description": "",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Clegginabox\\Airlock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clegginabox\\Airlock\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Paul Clegg",
            "homepage": "https://clegginabox.co.uk/"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-redis": "*"
    },
    "require-dev": {
        "ext-memcached": "*",
        "ext-zookeeper": "*",
        "amphp/sync": "^2.3",
        "illuminate/cache": "^12.47",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "12.5.4",
        "react/async": "^4.3",
        "react/event-loop": "^1.6",
        "react/promise": "^3.3",
        "rector/rector": "^2.3",
        "slevomat/coding-standard": "^8.26",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/amazon-dynamo-db-lock": "^8.0",
        "symfony/framework-bundle": "^8.0",
        "symfony/lock": "^8.0",
        "symfony/mercure": "^0.7.2",
        "symfony/rate-limiter": "^8.0",
        "symfony/semaphore": "^8.0",
        "testcontainers/testcontainers": "^1.0"
    },
    "suggest": {
        "symfony/lock": "Recommended Lock implementation",
        "symfony/semaphore": "Recommended Semaphore implementation",
        "symfony/mercure": "Required to use the MercureAirlockNotifier."
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable"
}
